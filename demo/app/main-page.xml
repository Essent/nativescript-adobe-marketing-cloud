<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page">
  <StackLayout orientation="vertical">
    <Label text="{{ message }}" class="message" textWrap="true"/>
    <Button text="Click me for action" tap="action"/>
    <Button text="Click me for a new state" tap="nextState"/>
    <Button text="Click me to optIn" tap="optIn"/>
    <Button text="Click me to optOut" tap="optOut"/>
  </StackLayout>
</Page>
